{
    "name": "Slurm",
    "description": "Slurm",
    "author": "Nimbix, Inc.",
    "licensed": true,
    "classifications": [
        "System",
        "Software Development/Software Testing"
    ],
    "machines": [
        "n[0-9]",
        "n[1-9][0-9]",
        "ng[2-9]*",
        "ngd[3-9]*"
    ],
    "vault-types": [
        "FILE",
        "BLOCK",
        "BLOCK_ARRAY",
        "OBJECT"
    ],
    "commands": {
        "Server": {
            "description": "Launch a session with all boot services, including SSH (if installed).  Connection address and credentials will appear in your web browser once available.",
            "interactive": true,
            "name": "Server",
            "parameters": {},
            "path": "/sbin/init"
        },
        "Cluster": {
            "path": "/etc/slurm-llnl/start-slurm.sh",
            "interactive": true,
            "name": "Cluster",
            "description": "Launch a session with all boot services, including SSH.  Connection address and credentials will appear in your web browser once available.  You may also connect and interact with the session graphically in your browser.  Once logged in you may use Slurm commands like sbatch and squeue to submit and monitor job status, or use mpirun with the machines file /etc/JARVICE/nodes to run parallel commands directly.",
            "parameters": {
                "APIKEY": {
                    "name": "API key",
                    "required": true,
                    "type": "CONST",
                    "value": "%APIKEY%",
                    "variable": true
                },
                "APIURL": {
                    "name": "API URL",
                    "required": true,
                    "type": "CONST",
                    "value": "%APIURL%",
                    "variable": true
                },
                "APIUSER": {
                    "name": "API username",
                    "required": true,
                    "type": "CONST",
                    "value": "%APIUSER%",
                    "variable": true
                },
                "JARVICE_VAULT_NAME": {
                    "name": "Vault name",
                    "required": true,
                    "type": "CONST",
                    "value": "%VNAME%",
                    "variable": true
                }
            }
        },
        "PublicCluster": {
            "path": "/etc/slurm-llnl/start-slurm.sh",
            "interactive": true,
            "publicip": true,
            "name": "Public Cluster",
            "description": "Launch a session with all boot services, including SSH.  Connection address and credentials will appear in your web browser once available.  You may also connect and interact with the session graphically in your browser.  Once logged in you may use Slurm commands like sbatch and squeue to submit and monitor job status, or use mpirun with the machines file /etc/JARVICE/nodes to run parallel commands directly.",
            "parameters": {
                "APIKEY": {
                    "name": "API key",
                    "required": true,
                    "type": "CONST",
                    "value": "%APIKEY%",
                    "variable": true
                },
                "APIURL": {
                    "name": "API URL",
                    "required": true,
                    "type": "CONST",
                    "value": "%APIURL%",
                    "variable": true
                },
                "APIUSER": {
                    "name": "API username",
                    "required": true,
                    "type": "CONST",
                    "value": "%APIUSER%",
                    "variable": true
                },
                "JARVICE_VAULT_NAME": {
                    "name": "Vault name",
                    "required": true,
                    "type": "CONST",
                    "value": "%VNAME%",
                    "variable": true
                }
            }
        }
    },
    "image": {
        "type": "image/jpeg",
        "data": ""
    }
}
